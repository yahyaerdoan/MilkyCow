@model List<ResultTestimonialDto>
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="section-title bg-white text-center text-primary px-3">Testimonial</p>
            <h1 class="mb-5">What People Say About Our Dairy Farm</h1>
        </div>

        <div class="row g-5 align-items-center">

            <div class="col-lg-5 wow fadeInUp" data-wow-delay="0.1s">
                <div class="testimonial-img">
                    <img class="img-fluid animated pulse infinite" src="/template/dairy-website-template/img/testimonial-1.jpg" alt="">
                    <img class="img-fluid animated pulse infinite" src="/template/dairy-website-template/img/testimonial-2.jpg" alt="">
                    <img class="img-fluid animated pulse infinite" src="/template/dairy-website-template/img/testimonial-3.jpg" alt="">
                    <img class="img-fluid animated pulse infinite" src="/template/dairy-website-template/img/testimonial-4.jpg" alt="">
                </div>
            </div>
           
                <div class="col-lg-7 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="owl-carousel testimonial-carousel">
                    @foreach (var item in Model)
                    {
                        <div class="testimonial-item">

                            <img class="img-fluid mb-3" src="@item.ImageUrl" alt="">
                            <p class="fs-5">@item.Description</p>
                            <h5>@item.FirstName @item.LastName</h5>
                            <span class="text-primary">@item.Title</span>
                        </div>
                    }
                    </div>
                </div>            
           
        </div>
    </div>
</div>