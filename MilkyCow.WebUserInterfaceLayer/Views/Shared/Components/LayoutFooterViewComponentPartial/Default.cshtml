<div class="container-fluid bg-dark footer mt-5 py-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Our Office</h5>
                @await Component.InvokeAsync("FooterAddressViewComponentPartial")
                <div class="d-flex pt-3">
                    @await Component.InvokeAsync("FooterSocialMediaViewComponentPartial")
                </div>
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Quick Links</h5>
                <a class="btn btn-link" href="/About/Index">About Us</a>
                <a class="btn btn-link" href="/Contact/Index">Contact Us</a>
                <a class="btn btn-link" href="/Service/Index">Our Services</a>
                <a class="btn btn-link" href="">Terms & Condition</a>
                <a class="btn btn-link" href="">Support</a>
            </div>
            <div class="col-lg-3 col-md-6">
                @await Component.InvokeAsync("FooterBusinessHourViewComponentPartial")
            </div>
            <div class="col-lg-3 col-md-6">
                <h5 class="text-white mb-4">Newsletter</h5>
                <p>Stay updated with our latest products, special offers, and farm news by subscribing to our newsletter today!</p>
                <div class="position-relative w-100">
                    <input class="form-control bg-transparent w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                    <button type="button" class="btn btn-secondary py-2 position-absolute top-0 end-0 mt-2 me-2">SignUp</button>
                </div>
            </div>
        </div>
    </div>
</div>
