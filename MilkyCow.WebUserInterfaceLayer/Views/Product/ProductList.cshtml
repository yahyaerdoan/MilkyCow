@model List<MilkyCow.WebUserInterfaceLayer.Dtos.ResultProductWithCategoryDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<div class="container">



    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Product Name</th>
            <th>Category Name</th>
            <th>Last Price</th>
            <th>New Price</th>
            <th>Image Url</th>
            <th>Status</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Name</td>
                <td>@item.Category.Name</td>
                <td>@item.LastPrice</td>
                <td>@item.NewPrice</td>
                <td>@item.Image</td>
                <td>@item.Status</td>

                <td> <a href="/Product/DeleteProduct/@item.ProductId" class="btn  btn-danger">Delete</a></td>
                <td> <a href="/Product/UpdateProduct/@item.ProductId" class="btn  btn-success">Update</a></td>
            </tr>
        }
    </table>
    <a href="/Product/CreateProduct" class="btn  btn-success">New Product</a>
</div>
