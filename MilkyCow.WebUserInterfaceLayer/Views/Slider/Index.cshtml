@model List<ResultSliderDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<div class="container">



    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Header</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SliderId</td>
                <td>@item.ImageUrl</td>
                <td>@item.Header</td>
                <td>@item.Title</td>
                <td>@item.Description</td>             
                <td>@item.Status</td>

                <td> <a href="/Slider/DeleteSlider/@item.SliderId" class="btn  btn-danger">Delete</a></td>
                <td> <a href="/Slider/UpdateSlider/@item.SliderId" class="btn  btn-success">Update</a></td>
            </tr>
        }
    </table>
    <a href="/Slider/CreateSlider" class="btn  btn-success">New Slider</a>
</div>
