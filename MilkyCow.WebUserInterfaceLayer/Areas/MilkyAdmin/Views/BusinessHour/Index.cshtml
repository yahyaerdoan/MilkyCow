@model List<ResultBusinessHourDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/MilkyAdmin/Views/Layout/Index.cshtml";
}


@{
    int count = 0;
}
<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>BusinessHour List</b>
        </h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-decoration-none">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Days</th>                 
                    <th>Hours</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td><b>@count</b></td>
                        <td>@item.BusinessHourId</td>
                        <td class="text-danger">@item.Day</td>
                        <td>@item.Hour</td>
                        <td>
                            <a href="/MilkyAdmin/BusinessHour/UpdateBusinessHour/@item.BusinessHourId" class="btn btn-outline-primary sm">Update</a>
                        </td>
                        <td>
                            <a href="/MilkyAdmin/BusinessHour/DeleteBusinessHour/@item.BusinessHourId" class="btn btn-outline-danger sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="margin-top:1rem">
            <a href="/MilkyAdmin/BusinessHour/CreateBusinessHour" class="btn btn-outline-primary col-md-12">Create New BusinessHour</a>
        </div>
    </div>
</div>

