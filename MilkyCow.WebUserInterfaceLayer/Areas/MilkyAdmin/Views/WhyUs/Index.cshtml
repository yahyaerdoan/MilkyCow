@model List<ResultWhyUsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/MilkyAdmin/Views/Layout/Index.cshtml";
}

@{
    int count = 0;
}
<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>WhyUs List</b>
        </h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-decoration-none">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Id</th>                 
                    <th>Title</th>
                    <th>Description</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td><b>@count</b></td>
                        <td>@item.WhyUsId</td>
                        <td class="text-danger">@item.Title</td>                
                        <td>@item.Description</td>
                        <td>
                            <a href="/MilkyAdmin/WhyUs/UpdateWhyUs/@item.WhyUsId" class="btn btn-outline-primary sm">Update</a>
                        </td>
                        <td>
                            <a href="/MilkyAdmin/WhyUs/DeleteWhyUs/@item.WhyUsId" class="btn btn-outline-danger sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="margin-top:1rem">
            <a href="/MilkyAdmin/WhyUs/CreateWhyUs" class="btn btn-outline-primary col-md-12">Create New WhyUs</a>
        </div>
    </div>
</div>