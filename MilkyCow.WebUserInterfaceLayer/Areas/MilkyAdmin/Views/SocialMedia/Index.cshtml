@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/MilkyAdmin/Views/Layout/Index.cshtml";
}

@{
    int count = 0;
}
<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>SocialMedia List</b>
        </h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-decoration-none">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Id</th>
                    <th>Social Meadia Name</th>
                    <th>Account Url</th>
                    <th>Icon Url</th>
                    <th>Status</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td><b>@count</b></td>
                        <td>@item.SocialMediaId</td>
                        <td class="text-danger">@item.Name</td>
                        <td>@item.AccountUrl</td>
                        <td>@item.Icon</td>
                        <td>@item.Status</td>
                        <td>
                            <a href="/MilkyAdmin/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-primary sm">Update</a>
                        </td>
                        <td>
                            <a href="/MilkyAdmin/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="margin-top:1rem">
            <a href="/MilkyAdmin/SocialMedia/CreateSocialMedia" class="btn btn-outline-primary col-md-12">Create New SocialMedia</a>
        </div>
    </div>
</div>