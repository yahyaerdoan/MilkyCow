@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Areas/MilkyAdmin/Views/Layout/Index.cshtml";
}

<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>Update Banner</b>
        </h3>
    </div>
    <div class="card-body">
        <form role="form" method="post" action="/MilkyAdmin/Banner/UpdateBanner">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="text-danger">Banner Image Url</label>
                        <input type="hidden" class="form-control" placeholder="banner image url" asp-for="BannerId">
                        <input type="text" class="form-control" placeholder="banner image url" asp-for="ImageUrl">
                    </div>
                </div>
            </div>
            <button style="margin-top:1rem" type="submit" class="btn btn-outline-success col-md-12">Update New Banner</button>
        </form>
    </div>
</div>